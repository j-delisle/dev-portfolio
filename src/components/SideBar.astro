---
import NavItem from './NavItem.astro';
import SocialIcons from './SocialIcons.astro';
---

<div
  class="hidden md:flex sticky top-0 bottom-0 lg:left-0 grow flex-col gap-y-5 overflow-y-auto bg-base-100 px-6 pb-2 w-[300px] max-w-sm border-r-2 border-base-light"
>
  <div class="fixed">
    <div
      class="flex items-center p-6 pb-4 border-b-2 shrink-0 border-base-light"
    >
      <a href="/" class="">
        <img
          class="w-48 h-48 border rounded-full object-cover"
          src="/images/profile-color.JPG"
          alt="Your Company"
        />
      </a>
    </div>
    <nav class="flex flex-col flex-1">
      <div role="list" class="flex flex-col flex-1 gap-y-7">
        <ul role="list" class="-mx-2 space-y-1">
          <NavItem to="#clients" navName="Client Projects" icon="code" />
          <NavItem
            to="#projects"
            navName="Personal Projects"
            icon="chart-bar"
          />
          <!-- <NavItem to="/blog" navName="Posts" icon="document-text" /> -->
          <!-- <NavItem to="#" navName="Work With Me" icon="user-group" /> -->
          <!-- <NavItem to="#" navName="Resume" icon="cloud-download" /> -->
          <NavItem
            to="mailto:jay@jaydelisle.dev"
            navName="Work With Me"
            icon="mail"
          />
        </ul>
      </div>
    </nav>
    <div class="fixed bottom-1">
      <SocialIcons />
    </div>
  </div>
</div>
