---
import {getCollection} from "astro:content"
import ProjectCard from '../ProjectCard.astro';

const projects = await getCollection("projects")
---

<section id="#projects" class="my-10">
  <div class="py-6">
    <h2 class="text-prime-text text-3xl mb-3 underline underline-offset-8">
      Recent Projects
    </h2>

    <p class="text-secondary-text">
      Checkout some of my recent projcts, live or the code.
    </p>
  </div>
  <ul class="grid grid-cols-1 gap-x-12 gap-y-16 sm:grid-cols-2 lg:grid-cols-3">
    {projects.map((project) =>
    <ProjectCard
      name={project.data.name}
      stack={['react', 'python']}
      desc={project.data.description}
      github_url={project.data.github_url}
      live_url={project.data.project_url}
    />)}
  </ul>
</section>
