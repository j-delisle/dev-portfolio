---
import { Icon } from 'astro-icon';
---

<div class="px-4 my-2 flex self-center">
  <a
    href="https://github.com/j-delisle"
    target="_blank"
    class="mx-3"
    aria-label="Github"
    title="Github"
  >
    <Icon
      pack="mdi"
      name="github"
      class="h-6 w-6 text-prime-text hover:text-prime"
    />
  </a>
  <a
    href="https://twitter.com/delisle_domain"
    target="_blank"
    class="mx-3"
    aria-label="Twitter"
    title="Twitter"
  >
    <Icon
      pack="mdi"
      name="twitter"
      class="h-6 w-6 text-prime-text hover:text-prime"
    />
  </a>
  <a
    href="https://linkedin.com/in/jay-delisle-6b922886"
    target="_blank"
    class="mx-3"
    aria-label="Linkedin"
    title="Linkedin"
  >
    <Icon
      pack="mdi"
      name="linkedin"
      class="h-6 w-6 text-prime-text hover:text-prime"
    />
  </a>

  <a
    href="/rss.xml"
    target="_blank"
    class="mx-3"
    aria-label="RSS Feed"
    title="RSS Feed"
  >
    <Icon
      pack="mdi"
      name="rss"
      class="h-6 w-6 text-prime-text hover:text-prime"
    />
  </a>
</div>
