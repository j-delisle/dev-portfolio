---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import MobileNav from '../components/MobileNav.astro';
import SideBar from '../components/SideBar.astro';
import SocialIcons from '../components/SocialIcons.astro';
---

<!doctype html>
<html lang="en" class="bg-base text-prime-text">
  <head>
    <BaseHead title={'Jay Delisle | Fullstack Dev'} description={'Reliable fullstack development for fast growing startups.'} />
  </head>
  <body>
    <div class="container min-h-screen mx-auto">
      <div class="flex flex-row flex-wrap py-4">
        <SideBar />
        <main role="main" class="w-full px-2 pt-1 sm:w-2/3 md:w-3/4">
          <MobileNav />
          <div class="mt-24 md:mt-0 sm:px-8 my-9">
            <div class="w-full mx-auto max-w-7xl lg:px-8">
              <div class="relative px-4 sm:px-8 lg:px-12">
                <div class="max-w-2xl mx-auto lg:max-w-5xl">
                  <slot />
                </div>
              </div>
            </div>
          </div>
          <Footer />
          <div
            class="fixed bottom-0 z-10 flex justify-center w-full pt-4 bg-base md:hidden"
          >
            <SocialIcons />
          </div>
        </main>
      </div>
    </div>
  </body>
</html>
