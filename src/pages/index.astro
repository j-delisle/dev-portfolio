---
import ProjectSection from '../components/sections/ProjectSection.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import BaseLayout from '../layouts/BaseLayout.astro';
import PostSection from '../components/sections/PostSection.astro';
import Icon from 'astro-icon';
import Hero from '../components/Hero.astro';
import ClientCard from '../components/ClientCard.astro';
import Review from '../components/Review.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<BaseLayout>
  <Hero />

  <!-- Testimonial Section -->
  <Review
    review_text={`"Availability, quick response time, and technical strategy input - providing valuable input and suggestion on best practices versus just doing it."`}
    name="Neal Cung"
    company="Founder @ NLN Capital"
    image_src="/images/neal_cung_pfp.jpeg"
  />

  <!-- Client Work Projects -->
  <section id="clients" class="my-10">
    <div class="py-6">
      <h2 class="mb-3 text-3xl underline text-prime-text underline-offset-8">
        Recent Client Work
      </h2>

      <p class="text-secondary-text">Some of my client projects</p>
    </div>
    <ul class="flex flex-col gap-x-12 gap-y-16 md:grid md:grid-cols-2">
      <ClientCard
        showcase_url="https://www.urbandirect.com/"
        showcase_text="Application Site"
        live_url="https://www.urbandirect.com/"
        name="UrbanDirect"
        client_desc="Fast growing NYC startup working to disrupt the overnight shipping industry"
        project_desc="After failing to hit deadlines, I came on to UrbanDirect to lead application developlment. I got a full React frontend application out the door and proudction ready in two weeks to get the startup back on track for their launch date and oversaw the backend developer"
        project_review="Great experience. This project was very fluid and Delisle Domain was instrumental to help keep the team focused, applying best practices in providing the best UI/UX experience for the end customer."
        stack_src="https://skillicons.dev/icons?i=react,javascript,aws,webflow,vite,c#&perline=6"
      />
      <ClientCard
        showcase_url="https://www.loom.com/share/14829874020d4dd68b05f5dda4c20c01?sid=7204643c-878b-49da-b4f4-87c291ea4c37"
        showcase_text="Client Case Study"
        live_url="https://tweethunter.io/"
        name="TweetHunter"
        client_desc="Fast growing Twitter/X content tool that has been sold for over 8 figures"
        project_desc="I was brought on to improve Tweet Hunter's leading page performance. Increased their landing page performance by over 40%. In addition, I built out their content system in Webflow for their SEO strategist and team."
        project_review="Jay helped us achieve everything we wanted to do on Webflow. I'd recommend him without any hesitation."
        stack_src="https://skillicons.dev/icons?i=javascript,webflow&perline=6"
      />
    </ul>
  </section>

  <Review
    review_text={`"Communication with Jay was excellent. He took my feedback and replied with detailed Loom videos highlighting what he did"`}
    name="Luke Netti"
    company="Founder @ Luke Netti"
    image_src="/images/luke_netti.jpeg"
  />

  <!-- Personal Projects -->
  <section id="projects" class="my-10">
    <div class="py-6">
      <h2 class="mb-3 text-3xl underline text-prime-text underline-offset-8">
        Personal Projects
      </h2>

      <p class="text-secondary-text">
        Some of my current projects that I'm working on myself
      </p>
    </div>
    <ul class="grid grid-cols-1 gap-x-12 gap-y-16 sm:grid-cols-2">
      <!-- icon docs
      https://github.com/tandpfun/skill-icons -->
      <ProjectCard
        app_url="https://app.lucidly.so/"
        marketing_url="https://lucidly.so/"
        desc="Website QA all in one platform for real-time collaboration and feedback management"
        name="Lucidly"
        skill_src="https://skillicons.dev/icons?i=typescript,react,laravel,tailwindcss,postgres&perline=5"
      />
      <ProjectCard
        app_url="https://getgeoflow.com/"
        desc="Low-code personalization tool for Webflow websites with over 30+ visitor data points"
        name="Geoflow"
        skill_src="https://skillicons.dev/icons?i=javascript,nodejs,laravel,tailwindcss,postgres,cloudflare&perline=5"
      />
      <ProjectCard
        app_url="https://app.autoservicelogger.com/"
        marketing_url="https://autoservicelogger.com/"
        desc="Web application to keep track of all vehicle service records and documents"
        name="Auto Service Logger"
        skill_src="https://skillicons.dev/icons?i=laravel,tailwindcss,php,postgres,aws&perline=5"
      />
    </ul>
  </section>
</BaseLayout>
